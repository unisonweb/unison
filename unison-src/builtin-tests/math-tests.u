    checkEqual "eqlf" (1.1 == 1.1) true
    checkEqual "eqlf" (1.1 == 1.2) false
    checkEqual "leqi" (-1 <= +1) true
    checkEqual "leqn" (1 <= 2) true
    checkEqual "subi" (+4 - +3) +1
