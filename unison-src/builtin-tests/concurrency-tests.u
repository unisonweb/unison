tryEvalKillTest = do
  ref = IO.ref "initial"              
  t = fork do
    match catchAll do sleep_ (400 * millis) with
      Left _ -> unsafeRun! do Ref.write ref "interrupted"
      Right _ -> unsafeRun! do Ref.write ref "finished"
  sleep_ (200 * millis)
  kill_ t
  sleep_ (300 * millis)
  v = Ref.read ref
  checkEqual "Thread was killed, with finalisers" v "interrupted"

